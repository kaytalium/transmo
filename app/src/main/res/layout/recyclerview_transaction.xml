<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="2dp"
    android:paddingBottom="@dimen/fab_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/fab_margin"
        android:text="Date"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_below="@id/tv_date_label"
        android:textSize="12sp"
        android:text="Apr-10-2019"/>

    <TextView
        android:id="@+id/tv_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_below="@id/tv_date_value"
        android:textSize="12sp"
        android:text="4:37 pm"/>

    <TextView
        android:id="@+id/tv_ticket_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="60dp"
        android:layout_toRightOf="@id/tv_date_label"
        android:text="Ticket #"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_ticket_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="60dp"
        android:layout_toRightOf="@id/tv_date_label"
        android:layout_below="@id/tv_ticket_label"
        android:textSize="12sp"
        android:text="8879"/>

        <TextView
            android:id="@+id/tv_operator_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@id/tv_ticket_label"
            android:text="Operator #"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_operator_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@id/tv_ticket_label"
            android:layout_below="@id/tv_ticket_label"
            android:textSize="12sp"
            android:text="82507"/>

        <TextView
            android:id="@+id/tv_route_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@id/tv_operator_label"
            android:layout_alignParentEnd="true"
            android:text="Route"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_route_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="40dp"
            android:layout_toRightOf="@id/tv_operator_label"
            android:layout_below="@id/tv_route_label"
            android:textSize="12sp"
            android:text="83B"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>