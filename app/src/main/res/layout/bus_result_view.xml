<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginBottom="5dp"
 >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">



    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bus_number"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="83"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/main_search"
            />

        <ImageView
            android:id="@+id/bus_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_directions_bus_24px"
            android:layout_below="@id/bus_number"
            android:layout_marginStart="26dp"
            />

        <TextView
            android:id="@+id/bus_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_icon"
            android:layout_marginTop="0dp"

            android:text="on time"
            android:textAlignment="center"

            android:textSize="12sp"
            android:textStyle="italic" />

    <TextView
    android:id="@+id/cost_amount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="$100"
    android:textSize="12sp"
        android:layout_marginTop="5dp"
    android:textAlignment="center"
    android:textColor="@color/colorWhiteDim"
    android:layout_below="@id/bus_status"
   />
</RelativeLayout>

<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="match_parent"
    >

<TextView
    android:id="@+id/departure_from_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="7dp"
    android:layout_alignParentTop="true"
    android:text="Origin"
    android:textAlignment="center"
    android:textSize="10sp"
    android:textColor="@color/colorAccent"
    />

<TextView
    android:id="@+id/departure_from"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="20dp"
   android:layout_alignParentTop="true"
    android:text="Half Way Tree"
    android:textAlignment="center"
    android:textSize="16sp"
    android:textStyle="bold" />


<TextView
    android:id="@+id/departure_from_time_label"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="Scheduled Departure: "
    android:textSize="12sp"
    android:layout_marginTop="0dp"
    android:layout_below="@id/departure_from"
    android:layout_alignStart="@id/departure_from"


    />

    <TextView
        android:id="@+id/departure_from_delay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5"
        android:textSize="13sp"
        android:textAlignment="center"

        android:layout_marginStart="8dp"

        android:layout_toRightOf="@id/departure_from_time"
        android:layout_below="@id/departure_from"
        android:textColor="@color/colorRed"


        />

<TextView
    android:id="@+id/departure_from_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="10:00 am"
    android:textSize="12sp"
    android:textAlignment="center"
    android:layout_marginTop="0dp"
    android:layout_marginStart="4dp"
    android:layout_below="@id/departure_from"
    android:layout_toRightOf="@id/departure_from_time_label"


    />


<TextView
    android:id="@+id/destination_to_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="27dp"
    android:layout_below="@id/departure_from"
    android:text="Destination"
    android:textAlignment="center"
    android:textColor="@color/colorAccent"
    android:textSize="10sp"
     />

<TextView
    android:id="@+id/destination_to"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="37dp"
    android:layout_below="@id/departure_from"
    android:text="Down Town Kingston"
    android:textAlignment="center"

    android:textSize="16sp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/destination_to_time_label"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="Schedule Arrival: "
    android:textSize="12sp"
    android:layout_toRightOf="@id/destination_to"
    android:layout_below="@id/destination_to"
    android:layout_alignStart="@id/destination_to"

    />

<TextView
    android:id="@+id/destination_to_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="10:37 am"
    android:textSize="12sp"
    android:textAlignment="center"
    android:layout_marginTop="0dp"
    android:layout_marginStart="4dp"
    android:layout_toRightOf="@id/destination_to_time_label"
    android:layout_below="@id/destination_to"


    />



</RelativeLayout>


