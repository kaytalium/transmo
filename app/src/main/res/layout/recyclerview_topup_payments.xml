<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="4dp"
    android:id="@+id/parentOfWalletItem">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topup_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="Nova Scotia"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_topup_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:layout_below="@id/topup_bank_name"
        android:textSize="26sp"
        android:text="XXXX XXXX XXXX 3456"/>


    <TextView
        android:id="@+id/tv_topup_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_below="@id/tv_topup_card_number"
        android:textSize="18sp"
        android:textColor="@color/colorFunkyBlue"
        android:textStyle="bold"
        android:text="John E. Doe"/>

    <TextView
        android:id="@+id/tv_card_account_card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:text="Debit Card"/>

    <TextView
        android:id="@+id/tv_topup_card_account_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentEnd="true"
       android:layout_below="@id/tv_topup_card_number"
        android:textSize="14sp"
        android:text="Midas"/>



</RelativeLayout>

</androidx.cardview.widget.CardView>